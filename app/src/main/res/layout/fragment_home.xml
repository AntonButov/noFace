<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/age1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ваш возраст" />

            <Button
                android:id="@+id/until18_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteGray"
                android:text="До 18" />

            <Button
                android:id="@+id/b18_21_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteGray"
                android:text="От 18 до 21" />

            <Button
                android:id="@+id/b21_25_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteGray"
                android:text="От 22 до 25" />

            <Button
                android:id="@+id/b26_35_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteGray"
                android:text="От 26 до 35" />

            <Button
                android:id="@+id/b35_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteGray"
                android:text="Старше 35" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/age2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Возраст собеседника" />

            <Button
                android:id="@+id/until18_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteGray"
                android:text="До 18" />

            <Button
                android:id="@+id/b18_21_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteGray"
                android:text="От 18 до 21" />

            <Button
                android:id="@+id/b21_25_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteGray"
                android:text="От 22 до 25" />

            <Button
                android:id="@+id/b26_35_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteGray"
                android:text="От 26 до 35" />

            <Button
                android:id="@+id/b35_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/whiteGray"
                android:text="Старше 35" />

            <TextView
                android:id="@+id/mabe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Можно несколько" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gender1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ваш пол" />

            <Button
                android:id="@+id/man1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Мужской" />

            <Button
                android:id="@+id/feMale1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Женский" />

            <Button
                android:id="@+id/anyGender1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Любой" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gender2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Пол собеседника" />

            <Button
                android:id="@+id/man2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мужской" />

            <Button
                android:id="@+id/feMale2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Женский" />

            <Button
                android:id="@+id/anyGender2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Любой" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:text="Начать чат"
        android:textColor="#fff"
        android:textSize="18dp"
        app:layout_anchorGravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/fab"
        app:layout_constraintEnd_toEndOf="@+id/fab"
        app:layout_constraintStart_toStartOf="@+id/fab"
        app:layout_constraintTop_toTopOf="@+id/fab" />
</androidx.constraintlayout.widget.ConstraintLayout>